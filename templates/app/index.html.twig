        * {
            font-family: "finalsix",sans-serif;
        }
        h2 {
            font-family: "bely-display",sans-serif;
        }
    </style> 
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
